name: E2E Tests

on:
  push:
    branches: [ main, develop, feature/e2e-tests ]
  pull_request:
    branches: [ main, develop ]

jobs:
  test:
    timeout-minutes: 20
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '20'
          cache: 'npm'

      - name: Install root dependencies
        run: npm ci

      - name: Install client dependencies
        run: cd client && npm ci

      - name: Setup Java (for Firestore emulator)
        uses: actions/setup-java@v4
        with:
          distribution: 'temurin'
          java-version: '21'

      - name: Install Firebase CLI
        run: npm install -g firebase-tools

      - name: Download Firebase emulators
        run: firebase setup:emulators:firestore

      - name: Install Playwright browsers
        run: npx playwright install --with-deps chromium

      - name: Start Firebase emulators (background)
        run: |
          firebase emulators:start --only auth,firestore,storage,functions &
          echo $! > emulator.pid
          # Wait for emulators to be ready (up to 120 seconds)
          echo "Waiting for Firebase emulators to start..."
          timeout 120 bash -c 'until curl -f http://localhost:4000 > /dev/null 2>&1; do echo "Still waiting..."; sleep 3; done' || exit 1
          echo "Firebase emulators started successfully"
          # Give emulators a bit more time to fully initialize
          sleep 5

      - name: Run E2E tests
        run: npm test
        env:
          CI: true

      - name: Generate test summary (on failure)
        if: failure()
        run: |
          echo "## ‚ùå E2E Tests Failed" >> $GITHUB_STEP_SUMMARY
          echo "" >> $GITHUB_STEP_SUMMARY
          echo "Tests failed. Check the artifacts below for details:" >> $GITHUB_STEP_SUMMARY
          echo "" >> $GITHUB_STEP_SUMMARY
          echo "- üìä Playwright Report: Detailed test results with traces" >> $GITHUB_STEP_SUMMARY
          echo "- üì∏ Screenshots: Visual snapshots of failures" >> $GITHUB_STEP_SUMMARY
          echo "" >> $GITHUB_STEP_SUMMARY
          echo "### Quick Links" >> $GITHUB_STEP_SUMMARY
          echo "- [View Artifacts](https://github.com/${{ github.repository }}/actions/runs/${{ github.run_id }})" >> $GITHUB_STEP_SUMMARY

      - name: Generate success summary
        if: success()
        run: |
          echo "## ‚úÖ All E2E Tests Passed" >> $GITHUB_STEP_SUMMARY
          echo "" >> $GITHUB_STEP_SUMMARY
          echo "All 8 tests completed successfully!" >> $GITHUB_STEP_SUMMARY

      - name: Stop Firebase emulators
        if: always()
        run: |
          if [ -f emulator.pid ]; then
            kill $(cat emulator.pid) || true
          fi

      - name: Upload Playwright report
        if: failure()
        uses: actions/upload-artifact@v4
        with:
          name: playwright-report
          path: playwright-report/
          retention-days: 7

      - name: Upload test screenshots
        if: failure()
        uses: actions/upload-artifact@v4
        with:
          name: test-results
          path: test-results/
          retention-days: 7

      - name: Comment on PR (failure only)
        if: failure() && github.event_name == 'pull_request'
        uses: actions/github-script@v7
        with:
          script: |
            github.rest.issues.createComment({
              issue_number: context.issue.number,
              owner: context.repo.owner,
              repo: context.repo.repo,
              body: '## ‚ùå E2E Tests Failed\n\nSome tests failed. [View the full report](https://github.com/${{ github.repository }}/actions/runs/${{ github.run_id }}) for details.'
            })
