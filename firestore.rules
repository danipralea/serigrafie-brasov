rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isAuthenticated() &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    function isTeamMember() {
      return isAuthenticated() &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isTeamMember == true;
    }

    function isAdminOrTeamMember() {
      return isAdmin() || isTeamMember();
    }

    // Users collection
    match /users/{userId} {
      // Users can read their own profile
      allow read: if isOwner(userId);

      // Admins and team members can read all user profiles
      allow read: if isAdminOrTeamMember();

      // Users can create their own profile during signup
      allow create: if isOwner(userId);

      // Users can update their own profile
      allow update: if isOwner(userId);

      // Only admins can delete user profiles
      allow delete: if isAdmin();
    }

    // Orders collection
    match /orders/{orderId} {
      // Users can read their own orders
      allow read: if isAuthenticated() &&
                     resource.data.userId == request.auth.uid;

      // Team members can read orders from their team owner
      allow read: if isAuthenticated() &&
                     resource.data.userId == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.teamOwnerId;

      // Admins and team members can read all orders
      allow read: if isAdminOrTeamMember();

      // Users can create orders (they become the owner)
      allow create: if isAuthenticated() &&
                       request.resource.data.userId == request.auth.uid;

      // Order owners can update their own orders
      allow update: if isAuthenticated() &&
                       resource.data.userId == request.auth.uid;

      // Admins and team members can update all orders
      allow update: if isAdminOrTeamMember();

      // Order owners can delete their own orders
      allow delete: if isAuthenticated() &&
                       resource.data.userId == request.auth.uid;

      // Admins and team members can delete any order
      allow delete: if isAdminOrTeamMember();

      // Order updates sub-collection
      match /orderUpdates/{updateId} {
        // Same read permissions as parent order
        allow read: if isAuthenticated() && (
          get(/databases/$(database)/documents/orders/$(orderId)).data.userId == request.auth.uid ||
          isAdminOrTeamMember()
        );

        // Anyone who can read the order can add updates
        allow create: if isAuthenticated() && (
          get(/databases/$(database)/documents/orders/$(orderId)).data.userId == request.auth.uid ||
          isAdminOrTeamMember()
        );

        // Only the update creator or admins can update
        allow update: if isAuthenticated() && (
          resource.data.userId == request.auth.uid ||
          isAdmin()
        );

        // Only admins can delete updates
        allow delete: if isAdmin();
      }
    }

    // Clients collection
    match /clients/{clientId} {
      // Users can read their own clients
      allow read: if isAuthenticated() &&
                     resource.data.userId == request.auth.uid;

      // Team members can read clients from their team owner
      allow read: if isAuthenticated() &&
                     resource.data.userId == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.teamOwnerId;

      // Admins and team members can read all clients
      allow read: if isAdminOrTeamMember();

      // Users can create clients (they become the owner)
      allow create: if isAuthenticated() &&
                       request.resource.data.userId == request.auth.uid;

      // Client owners can update their own clients
      allow update: if isAuthenticated() &&
                       resource.data.userId == request.auth.uid;

      // Admins and team members can update all clients
      allow update: if isAdminOrTeamMember();

      // Client owners can delete their own clients
      allow delete: if isAuthenticated() &&
                       resource.data.userId == request.auth.uid;

      // Admins and team members can delete any client
      allow delete: if isAdminOrTeamMember();
    }

    // Product types collection
    match /productTypes/{productTypeId} {
      // Users can read their own product types
      allow read: if isAuthenticated() &&
                     resource.data.userId == request.auth.uid;

      // Team members can read product types from their team owner
      allow read: if isAuthenticated() &&
                     resource.data.userId == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.teamOwnerId;

      // Admins and team members can read all product types
      allow read: if isAdminOrTeamMember();

      // Users can create product types (they become the owner)
      allow create: if isAuthenticated() &&
                       request.resource.data.userId == request.auth.uid;

      // Product type owners can update their own
      allow update: if isAuthenticated() &&
                       resource.data.userId == request.auth.uid;

      // Admins and team members can update all product types
      allow update: if isAdminOrTeamMember();

      // Product type owners can delete their own
      allow delete: if isAuthenticated() &&
                       resource.data.userId == request.auth.uid;

      // Admins and team members can delete any product type
      allow delete: if isAdminOrTeamMember();
    }

    // Team invitations collection
    match /teamInvitations/{invitationId} {
      // Anyone can read invitations (needed for accepting invitations before auth)
      // But we validate expiration and status on the client/cloud function
      allow read: if true;

      // Only authenticated users can create invitations
      allow create: if isAuthenticated() &&
                       request.resource.data.invitedBy == request.auth.uid;

      // Invitation creator can update their invitations
      allow update: if isAuthenticated() &&
                       resource.data.invitedBy == request.auth.uid;

      // Anyone can update to accept an invitation (before they have auth)
      // The Cloud Function validates the invitation
      allow update: if request.resource.data.status == 'accepted';

      // Only the creator or admin can delete invitations
      allow delete: if isAuthenticated() && (
        resource.data.invitedBy == request.auth.uid ||
        isAdmin()
      );
    }

    // Client invitations collection
    match /clientInvitations/{invitationId} {
      // Anyone can read invitations (needed for accepting invitations)
      allow read: if true;

      // Only authenticated users can create invitations
      allow create: if isAuthenticated() &&
                       request.resource.data.invitedBy == request.auth.uid;

      // Invitation creator can update their invitations
      allow update: if isAuthenticated() &&
                       resource.data.invitedBy == request.auth.uid;

      // Anyone can update to accept/decline an invitation
      allow update: if request.resource.data.status in ['accepted', 'declined'];

      // Only the creator or admin can delete invitations
      allow delete: if isAuthenticated() && (
        resource.data.invitedBy == request.auth.uid ||
        isAdmin()
      );
    }

    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
