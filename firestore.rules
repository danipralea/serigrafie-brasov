rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // TESTING RULES - More permissive for e2e tests
    // These rules allow test data seeding while still testing authentication flows

    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }

    function isAdmin() {
      return isAuthenticated() &&
             (getUserRole() == 'admin' || getUserRole() == 'owner');
    }

    function isTeamMember() {
      return isAuthenticated() &&
             (getUserRole() == 'member' || getUserRole() == 'admin' || getUserRole() == 'owner');
    }

    function isAdminOrTeamMember() {
      return isAdmin() || isTeamMember();
    }

    function isTeamOwner() {
      return isAuthenticated() &&
             getUserRole() == 'owner';
    }

    function isAdminOrTeamOwner() {
      return isAdmin() || isTeamOwner();
    }

    // Users collection - ALLOW CREATION for test seeding
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdminOrTeamMember();
      allow create: if true;  // Allow unauthenticated creation for test seeding
      allow update: if isOwner(userId);
      allow delete: if isAdmin();
    }

    // Orders collection
    match /orders/{orderId} {
      allow read: if isAuthenticated() &&
                     (resource.data.userId == request.auth.uid || isAdminOrTeamMember());
      allow create: if true;  // Allow unauthenticated creation for test seeding
      allow update: if isAuthenticated() &&
                       (resource.data.userId == request.auth.uid || isAdminOrTeamMember());
      allow delete: if isAuthenticated() &&
                       (resource.data.userId == request.auth.uid || isAdminOrTeamMember());

      // Sub-orders sub-collection
      match /subOrders/{subOrderId} {
        allow read: if isAuthenticated() &&
                      (resource.data.userId == request.auth.uid || isAdminOrTeamMember());
        allow create: if true;  // Allow unauthenticated creation for test seeding
        allow update: if isAuthenticated() &&
                         (resource.data.userId == request.auth.uid || isAdminOrTeamMember());
        allow delete: if isAuthenticated() &&
                         (resource.data.userId == request.auth.uid || isAdminOrTeamMember());
      }

      // Order updates sub-collection
      match /orderUpdates/{updateId} {
        allow read: if isAuthenticated();
        allow create: if true;  // Allow unauthenticated creation for test seeding
        allow update: if isAuthenticated() &&
                         (resource.data.userId == request.auth.uid || isAdmin());
        allow delete: if isAdmin();
      }
    }

    // Order updates collection (top-level)
    match /orderUpdates/{updateId} {
      allow read: if isAuthenticated();
      allow create: if true;  // Allow unauthenticated creation for test seeding
      allow update: if isAuthenticated() &&
                       (resource.data.userId == request.auth.uid || isAdmin());
      allow delete: if isAdmin();
    }

    // Clients collection
    match /clients/{clientId} {
      allow read: if isAuthenticated() &&
                     (resource.data.userId == request.auth.uid || isAdminOrTeamMember());
      allow create: if isAuthenticated() &&
                       request.resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated() &&
                       (resource.data.userId == request.auth.uid || isAdminOrTeamMember());
      allow delete: if isAuthenticated() &&
                       (resource.data.userId == request.auth.uid || isAdminOrTeamMember());
    }

    // Product types collection - ALLOW CREATION for test seeding
    match /productTypes/{productTypeId} {
      allow read: if isAuthenticated();
      allow create: if true;  // Allow unauthenticated creation for test seeding
      allow update: if isAuthenticated() &&
                       (resource.data.userId == request.auth.uid || isAdminOrTeamMember());
      allow delete: if isAuthenticated() &&
                       (resource.data.userId == request.auth.uid || isAdminOrTeamMember());
    }

    // Team invitations collection
    match /teamInvitations/{invitationId} {
      allow read: if true;
      allow create: if isAuthenticated() &&
                       request.resource.data.invitedBy == request.auth.uid;
      allow update: if isAuthenticated() &&
                       (resource.data.invitedBy == request.auth.uid ||
                        request.resource.data.status == 'accepted');
      allow delete: if isAuthenticated() &&
                       (resource.data.invitedBy == request.auth.uid || isAdmin());
    }

    // Client invitations collection
    match /clientInvitations/{invitationId} {
      allow read: if true;
      allow create: if isAuthenticated() &&
                       request.resource.data.invitedBy == request.auth.uid;
      allow update: if isAuthenticated() &&
                       (resource.data.invitedBy == request.auth.uid ||
                        request.resource.data.status in ['accepted', 'declined']);
      allow delete: if isAuthenticated() &&
                       (resource.data.invitedBy == request.auth.uid || isAdmin());
    }

    // Notifications collection
    match /notifications/{notificationId} {
      allow read: if isAuthenticated() &&
                     (resource.data.userId == request.auth.uid || isAdmin());
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() &&
                       (resource.data.userId == request.auth.uid || isAdmin());
      allow delete: if isAuthenticated() &&
                       (resource.data.userId == request.auth.uid || isAdmin());
    }

    // Suppliers collection - Only admins and team owners
    match /suppliers/{supplierId} {
      allow read: if isAdminOrTeamOwner();
      allow create: if isAdminOrTeamOwner();
      allow update: if isAdminOrTeamOwner();
      allow delete: if isAdminOrTeamOwner();
    }

    // Supplier Orders collection - Only admins and team owners
    match /supplierOrders/{orderId} {
      allow read: if isAdminOrTeamOwner();
      allow create: if isAdminOrTeamOwner();
      allow update: if isAdminOrTeamOwner();
      allow delete: if isAdminOrTeamOwner();
    }

    // Departments collection - Admins, team owners, and team members can read
    match /departments/{departmentId} {
      allow read: if isAdminOrTeamMember();
      allow create: if isAdminOrTeamOwner();
      allow update: if isAdminOrTeamOwner();
      allow delete: if isAdminOrTeamOwner();
    }

    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
